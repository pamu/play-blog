# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Auth Controller

GET     /login                           controllers.Auth.login
GET     /initiateLogin                   controllers.Auth.initiateLogin
GET     /oauth2                          controllers.Auth.oauth2(state: String)
GET     /oauth2callback                  controllers.Auth.oauth2callback()
GET     /oauth2callbackcleaned           controllers.Auth.oauth2callbackCleaned()
GET     /oops                            controllers.Auth.oops()
GET     /logout                          controllers.Auth.logout

#Application Controller
GET     /                                controllers.Application.index

#ApiController v1
GET    /api/v1/profile                   controllers.ApiController.profile

#AdminController
GET    /admin/dropTables                 controllers.AdminController.dropTables()
GET    /admin/createTables               controllers.AdminController.createTables()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)